<% if @monster.save %>
  $(".modal-header button span").trigger("click");
  setTimeout((function() {
    $("#<%= dom_id(@monster) %>").remove();
  }), 250);
  setTimeout((function() {
    $(".monsters").prepend("<%= j render @monster %>");
  }), 350);
  setTimeout((function() {
    $(window).scrollTop(100);
  }), 500);
<% else %>
  $("#edit_battle_level").effect("highlight", {color: "red"});
<% end %>