<% if current_user %>
  <%= render "store_tabs" %>
  <div class="store-front" id="ability-store">
    <%= image_tag(
          "https://s3-us-west-2.amazonaws.com/monbattle/images/Base-Abilities-text.png", 
            class: "premium-summon-logo base-summon-logo") %>
    <%= image_tag(
          "https://s3-us-west-2.amazonaws.com/monbattle/images/Ascension-Ability-Text.png", 
            class: "premium-summon-logo ascension-summon-logo ") %>


    <div class="currency-toggle king">
      <button class="current-toggle-but mp-toggle current-currency-toggle"
        data-rolltype="base" data-currencytype="gp">
        <span>100</span>
        <img class="mp-icon" src="https://s3-us-west-2.amazonaws.com/monbattle/images/gp.png">
      </button>
      <button class="current-toggle-but gp-toggle"
        data-rolltype="base" data-currencytype="mp">
        <span>5</span>
        <img class="mp-icon" src="https://s3-us-west-2.amazonaws.com/monbattle/images/mp.png">
      </button> 
    </div>

    <div class="currency-toggle queen">
      <button class="current-toggle-but mp-toggle current-currency-toggle"
        data-rolltype="ascension" data-currencytype="gp">
        <span>200</span>
        <img class="mp-icon" src="https://s3-us-west-2.amazonaws.com/monbattle/images/gp.png">
      </button>
      <button class="current-toggle-but gp-toggle" 
        data-rolltype="ascension" data-currencytype="mp">
        <span>10</span>
        <img class="mp-icon" src="https://s3-us-west-2.amazonaws.com/monbattle/images/mp.png">
      </button> 
    </div>

    <input type="image" src="https://s3-us-west-2.amazonaws.com/monbattle/images/summon-button.png" 
          alt="Submit" class="roll-but king-roll" data-roll="base">
    <input type="image" src="https://s3-us-west-2.amazonaws.com/monbattle/images/summon-button.png" 
          alt="Submit" class="roll-but queen-roll" data-roll="ascension">

    <div class="store-message-box base-store-message">
      <span>Monsters for base form monsters.</span>
      <span>Only summon these abilities right now!</span>
    </div>

    <div class="store-message-box ascension-store-message">
      <span>You don't need these abilities yet. </span>
      <span>So don't bother summoning these.</span>
    </div>
  </div>


  <div class="store-front mon-store" id="monster-store">
    <%= image_tag("premium-summon.png", class: "premium-summon-logo") %>
    <input type="image" src="https://s3-us-west-2.amazonaws.com/monbattle/images/summon-button.png" 
          alt="Submit" class="roll-but mon-roll" data-roll="monster">
    <div class="store-message">
      <span>Master, I sense new monsters!</span>
      <span>New monsters include: Hotspot, Spook, Grimrock, and Uorabora</span>
      <span>New Abilities include: Reckless Strike and Sword Summit</span>
    </div>
    <%= image_tag("ai-happy-avatar.png", class: "ai-happy-avatar") %> 
    <div class="currency-toggle monster">
      <button class="current-toggle-but mp-toggle current-currency-toggle"
        data-rolltype="monster" data-currencytype="gp">
        <span>1000</span>
        <img class="mp-icon" src="https://s3-us-west-2.amazonaws.com/monbattle/images/gp.png">
      </button>
      <button class="current-toggle-but gp-toggle" 
        data-rolltype="monster" data-currencytype="mp">
        <span>50</span>
        <img class="mp-icon" src="https://s3-us-west-2.amazonaws.com/monbattle/images/mp.png">
      </button> 
    </div>
  </div>

  <div class="store-front gem-store" id="gem-store">
    <div class="acquire-gem-bar">
      Acquiring 
      <%= image_tag("mp.png", class: "gem-icon") %>
    </div>
    <div class="gem-listing">
      <div class="listing" data-quantity="5" data-price="2.49">
        <%= image_tag("mp.png", class: "gem-icon") %>
        <span class="quantity">x 5</span>
        <span class="pricing">USD $2.49</span>
      </div>
      <div class="listing" data-quantity="80" data-price="31.99">
        <%= image_tag("mp.png", class: "gem-icon") %>
        <span class="quantity">x 80</span>
        <span class="pricing">USD $31.99</span>
      </div>
      <div class="listing" data-quantity="20" data-price="9.40">
        <%= image_tag("mp.png", class: "gem-icon") %>
        <span class="quantity">x 20</span>
        <span class="pricing">USD $9.40</span>
      </div>
      <div class="listing" data-quantity="120" data-price="45.59">
        <%= image_tag("mp.png", class: "gem-icon") %>
        <span class="quantity">x 120</span>
        <span class="pricing">USD $45.59</span>
      </div>
      <div class="listing" data-quantity="50" data-price="21.49">
        <%= image_tag("mp.png", class: "gem-icon") %>
        <span class="quantity">x 50</span>
        <span class="pricing">USD $21.49</span>
      </div>
      <div class="listing" data-quantity="200" data-price="71.99">
        <%= image_tag("mp.png", class: "gem-icon") %>
        <span class="quantity">x 200</span>
        <span class="pricing">USD $71.99</span>
      </div>
    </div>
  </div>


  <div class="store-overlay">
    <div class="store-overlay-objects">
      <%= image_tag("legendary-text.png", class: "rarity-icon") %>
      <%= image_tag("https://s3-us-west-2.amazonaws.com/monbattle/abilities/portraits/000/000/059/thumb/abil-spe-buff.png?1419284221", 
        class: "ability-won-icon") %>
      <div class="ability-won-description">
      </div>
    </div>
    <div class="panel-body roll-message">
    </div>

    <%= image_tag("reveal-button.png", class: "reveal-button")%>
    <button class="back-to-store">Close</button>
    <div class="gem-store-overlay-objects">
      <div class="confirmation">
        <div class="gem-confirmation-message">
          Are you sure you want to purchase
          <%= image_tag("mp.png", class: "gem-icon") %> x <span class="amount-to-purchase">100</span> ?
        </div>
        <%= image_tag("check-mark-100.png", class: "oh yes", data: {quantity: 0}) %>
        <%= image_tag("cancel.png", class: "oh no") %>
      </div>
      <div class="payment-select">
        <span class="payment-title">Buying</span>
        <br />
        <p></p>
        <div class="payment-title-white">
          <%= image_tag("mp.png", class: "gem-icon") %> x <span class="payment-amount-to-purchase">100</span> 
          for USD$ <span class="money-to-buy"></span>
        </div>
        <br />
        <p></p>
        <span class="payment-question">What would you like to pay with?</span>
        <br />
        <button class="credit-button">
          CREDIT CARD
          <%= image_tag("https://s3-us-west-2.amazonaws.com/monbattle/images/credit-card-icon.png") %>
        </button>
        <button class="paypal-button">
          <%= image_tag("https://s3-us-west-2.amazonaws.com/monbattle/images/paypal-icon.png") %>
        </button>
        <%= image_tag("remove-member.png", class: "exit-cross") %>
      </div>
      <div class="gem-store-message">
        <div class="viola-message">
          Sorry, this feature isn't available right now. Please check back soon.
        </div>
        <%= image_tag("https://s3-us-west-2.amazonaws.com/monbattle/images/viola-concerned.png", 
                      class: "viola-concerned-face") %>
      </div>
    <div>
  </div>

<% else %>
  <%= render "no_user" %>
<% end %>


