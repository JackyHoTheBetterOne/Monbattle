$(".enhancement-to-happen").fadeOut(200, function(){
  $(".enhancement-to-happen").html(
    "<%= j render partial:'enhance_monster', 
        locals: {monster: @enhancement.monster, enough: @enhancement.enough} %>"
  );
  setTimeout((function() {
    $(".enhancement-to-happen").fadeIn();
    $("#summoner-gp").text("<%= current_summoner.gp %>");
  }), 250);
});