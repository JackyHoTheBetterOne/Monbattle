<div class="popup-guidance-box">
  <%= image_tag("https://s3-us-west-2.amazonaws.com/monbattle/images/popup-tutorial.png", class: "popup-guidance") %>
  <%= image_tag("remove-member.png", class: "popup-remove") %>
</div>



<div class="the_ultimate_news_page">
  <%= render "carousel" %>
  <h3 class="news-list-title">What's New</h3>
  <div class="news-list">
    <%= render "notice_list" %> 
  </div>
  <div class="news-detail">
    <% if @notice != nil %>
      <%= render partial: "news_detail", locals: {notice: @notice} %>
    <% end %>
  </div> 
</div>


