$.ajax({
  url: "http://localhost:3000/abilities/" + <%= @ability.id %>,
  method: "get",
  dataType: "json",
  error: function() {
    return alert("Cannot get the latest abilities");
  },
  success: function(response) {
    window.ability = response;
    $(".modal-header span").trigger("click");
    $("#ability_" + ability.id + "-name").text(ability.name).effect("highlight");
    $("#ability_" + ability.id + "-row").effect("highlight");
    $("#ability_" + ability.id + "-row" + " " + ".ap-cost").text(ability.ap_cost);
    $("#ability_" + ability.id + "-row" + " " + ".description").text(ability.description);
    $("#ability_" + ability.id + "-row" + " " + ".element").text(ability.elementa);
    $("#ability_" + ability.id + "-row" + " " + ".target").text(ability.targeta);
    $("#ability_" + ability.id + "-row" + " " + ".stat-target").text(ability.stat);
    $("#ability_" + ability.id + "-row" + " " + ".stat-change").text(ability.stat_change);
    $("#ability_" + ability.id + "-row" + " " + ".image img").attr("src", ability.img);
    $("#ability_" + ability.id + "-row" + " " + ".portrait img").attr("src", ability.port);
    $("#ability_" + ability.id + "-row" + " " + ".mp-cost").text(ability.mp_cost);
    $("#ability_" + ability.id + "-row" + " " + ".gp-cost").text(ability.gp_cost)
  }
});