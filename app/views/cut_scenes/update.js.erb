<% if @cut_scene.save %>
  $("<%= dom_id(@cut_scene) %>-edit").click()
  $("div#<%= dom_id(@cut_scene) %>").html("<%= j render @cut_scene %>").effect("highlight");
  $('body').scrollTo('#<%= dom_id(@cut_scene) %>');
<% else %>
  $("#<%= dom_id(@cut_scene) %>-edit").effect("highlight", {color: "red"});
<% end %>