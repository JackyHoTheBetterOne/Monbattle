<% if @notice.save %>
  document.getElementById("<%= dom_id(@notice) %>").remove();
  $(".notices").prepend("<%= j render @notice %>");
  $("div#<%= dom_id(@notice) %>").effect("highlight");
  setTimeout((function() {
    $('body').scrollTo('#<%= dom_id(@notice) %>');
  }), 250);
<% else %>
  $("#<%= dom_id(@notice) %>-edit").effect("highlight", {color: "red"});
<% end %>