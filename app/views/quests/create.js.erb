<% if @quest.new_record? %>
  $(".new_quest").effect("highlight", {color: "red"});
<% else %>
  $(".new_quest")[0].reset();
  $(".quest-form-unfold").click();
  $(".quests").prepend("<%= j render @quest %>");
  setTimeout((function() {
    $('body').scrollTo('#<%= dom_id(@quest) %>');
    $("div#<%= dom_id(@quest) %>").effect("highlight");
  }), 500);
<% end %>