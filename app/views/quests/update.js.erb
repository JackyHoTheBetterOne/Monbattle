<% if @quest.save %>
  $(".<%= dom_id(@quest) %>-edit").click();
  $("#<%= dom_id(@quest) %>").html("<%= j render @quest %>");
  setTimeout((function() {
    $("#<%= dom_id(@quest) %>").effect("highlight");
    $("body").scrollTo("#<%= dom_id(@quest) %>");
  }), 500);
<% else %>
  $("#<%= dom_id(@quest) %>-edit").effect("highlight", {color: "red"});
<% end %>