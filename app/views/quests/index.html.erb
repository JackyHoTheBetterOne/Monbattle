<div class="jumbotron">
  <h1>Quests are forged here!</h1>
  <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" class="btn btn-default quest-form-unfold">
    Quest form
  </a>
  <p></p>
  <div id="collapseOne" class="panel-collapse collapse">
    <%= simple_form_for(@quest, remote: true, method: :post) do |f| %>
      <%= render partial: "form", locals: {f: f} %>
    <% end %>
  </div>
</div>
<p></p>
<div>
  <%= form_tag quests_path, :method => "get", remote: true %>
  <%= text_field_tag :keyword, params[:keyword] %>
  <%= submit_tag "Bitch Search", class: "btn btn-default quest-search" %>
</div>
<p></p>
<div class="quests">
  <%= render @quests %>
</div>
